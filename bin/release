#!/usr/bin/env bash

BUMP=${1:-minor}
REPLACE="@listener-js\/listener"
REPLACE_WITH="..\/node_modules\/@listener-js\/listener\/dist\/index"
VERSION="$(npx -c 'echo "$npm_package_version"')"
VERSION_BUMP="$(npx semver -i $BUMP $VERSION)"
MJS="./cdn/log-$VERSION_BUMP.mjs"

cd "$(dirname "$0")/../"

rm -rf cdn dist
mkdir cdn dist

sed -i '' "s/$REPLACE/$REPLACE_WITH/g" ./src/log.ts
npx tsc -m es6
sed -i '' "s/$REPLACE_WITH/$REPLACE/g" ./src/log.ts

npx rollup ./dist/log.js --context this --file $MJS -f esm
npx terser $MJS --compress -m reserved=['lid','lid_'] -o $MJS

rm -rf dist
npx tsc

git status

npx release-it --ci -i $BUMP
